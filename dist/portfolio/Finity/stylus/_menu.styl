.hamburger
	position absolute
	top 20px
	right 30px
	height 21px
	display flex
	flex-direction column
	justify-content space-between
	align-items flex-end
	cursor pointer
	display none
	span
		display block
		width 30px
		height 3px
		background dark-clr
	span.long
		width 36px
.menu
	position fixed
	top 0
	left -100%
	width 100%
	height 100vh
	z-index 10
	visibility hidden
	opacity 0
	transition all 0.6s
	&.active
		left 0
		visibility visible
		opacity 1
	&__block
		position relative
		width 345px
		height 100%
		background-color dark-clr
		padding-top 140px
		padding-left 40px
		transition all 0.6s
		z-index 10
	&__close
		position absolute
		top 25px
		right 25px
		cursor pointer
	&__list
		list-style-type none
		padding-left 35px
	&__link
		position relative
		margin-bottom 15px
		a
			color white
			text-decoration none
			font-weight bold
			font-size 1.6em
			line-height 1.6
			display block
			&:hover
				color yellow-clr
	&__social
		position absolute
		bottom 50px
		left 50%
		transform translateX(-50%)
		width 90px
		display flex
		justify-content space-between
	&__overlay
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		opacity 0.75
		overflow hidden
	.button.button-mini
		transform none
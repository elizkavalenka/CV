.reviews
    background light1-clr
    padding-top 139px
    position relative
    overflow hidden
    &-circle
        position absolute
        top -381px
        right -191px
        width 543px
        height 543px
        border-radius 50%
        background yellow-clr
    &__descr
        width 550px
        margin 0 auto
        margin-bottom 109px
        text-align center
        position relative
        .title
            margin-bottom 19px
    &__grid
        margin 0 auto 165px
        display flex
        justify-content center
        flex-wrap wrap
        gap 29px 20px
        position relative
        &-card
            background white
            width 353px
            height 188px
            padding 22px 20px
            border solid 1px light4-clr
            border-radius 15px
            .card-header
                display flex
                position relative
                align-items center
                margin-bottom 23px
                .name
                    padding-left 13px
                    color dark-clr
                .job 
                    color grey-clr
                    font-size 0.7em
                .icon
                    position absolute
                    right 0
            .card-text
                color grey-clr
                font-size 0.9em
.feature
    margin 0 auto 118px
    padding-top 50px
    background-color white
    position relative
    overflow hidden
    .title
        text-align center
        margin-bottom 18px
    &__text
        line-height 1.4
        color grey-clr
        width 489px
        margin 0 auto 84px
        text-align center
    &__carousel
        display flex
        justify-content space-between
        width 101vw
        position absolute
        transform translateX(-20%)
        background-color white
        gap 1%
    &__button
        display flex
        align-items center
        justify-content space-evenly
        padding-top 0
        margin 304px auto 10px

.card
    display flex
    justify-content start
    height 158px
    background-color light1-clr
    border-radius 10px
    padding 24px 20px 0
    &:first-child, &:last-child
        opacity 0.08
    &-img
        width 55px
        height 55px
        border-radius 50%
        background-color white
        display flex
        justify-content center
        align-items center
    &-descr
        width 204px
        color grey-clr
        margin-left 20px
        p
          font-size 0.9em
          line-height 1.6
    &-name
        font-size 1.2em
        font-weight bold
        color dark-clr

.companies
    display flex
    margin 0 auto 138px
    justify-content space-evenly
    img
        opacity 0.5
        object-fit contain